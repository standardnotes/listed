<% author_credentials_url = author_credentials_path(@author, :secret => @author.secret) %>

<%= react_component("AuthorSettings", props: {
    author: @author.as_json(
        only: [
            :id,
            :username,
            :display_name,
            :bio,
            :link,
            :twitter,
            :email,
            :meta_image_url,
            :header_image_url,
            :guestbook_disabled,
            :newsletter_disabled,
            :hide_from_homepage,
            :secret,
            :cover_style,
            :blog_layout_style,
            :custom_theme_enabled
        ],
        methods: [:accessible_via, :url],
        include: {
            credentials: {
                only: [:id, :key, :value]
            },
            domain: {
                only: [:domain, :approved, :active]
            }
        }
    ),
    authorCredentialsUrl: author_credentials_url,
    customDomainIP: ENV["CUSTOM_DOMAIN_IP"],
    guestbookEntries: @guestbook_entries.as_json(
        only: [
            :id,
            :text,
            :created_at,
            :signer_email,
            :donation_info,
            :public
        ],
        methods: [
            :approval_url,
            :unapproval_url,
            :spam_url,
            :deletion_url
        ],
    ),
    scrollToGuestbook: @scroll_to_guestbook,
    posts: @posts.as_json(
        only: [
            :id,
            :title,
            :unlisted,
            :created_at,
            :word_count
        ],
        methods: :url
    ),
    deleteAllDataError: flash[:error_delete_all_data]
}) %>
